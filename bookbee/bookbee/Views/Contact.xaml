        <StackLayout BackgroundColor="LightGray" Opacity="0.85" Margin="50">
            <!-- Place new controls here -->
            <Entry Placeholder="Enter Your User Name" Margin="20" BackgroundColor="Ivory" FontFamily="Verdana" FontAttributes="None" />
            <Entry Placeholder="Enter Your Password"  Margin="20" BackgroundColor="Ivory" FontFamily="Verdana"     />
